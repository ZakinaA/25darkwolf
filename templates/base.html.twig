        </div>

        {# --- SCRIPT AUTOMATIQUE + FIX SCROLL --- #}
        <script>
            document.addEventListener("DOMContentLoaded", function() {
                
                /* 1. STYLE TABLEAUX */
                const tables = document.querySelectorAll('table');
                tables.forEach(table => {
                    if(!table.classList.contains('planning-table')) {
                        table.classList.add('planning-table');
                    }
                });

                /* 2. BOUTONS AUTOMATIQUES */
                const container = document.querySelector('.content-container');
                if(container) {
                    const allElements = container.querySelectorAll('a, button');

                    allElements.forEach(el => {
                        const text = el.textContent.trim().toLowerCase();
                        
                        if (el.classList.contains('btn-action') || el.classList.contains('btn-create') || el.closest('.auth-buttons')) return;

                        if(text === 'show' || text === 'voir' || text.includes('d√©tails')) {
                            el.className = 'btn-action btn-show';
                            el.innerHTML = '<i class="fa-solid fa-eye"></i> ' + el.textContent;
                        }
                        else if(text === 'edit' || text === 'modifier') {
                            el.className = 'btn-action btn-edit';
                            el.innerHTML = '<i class="fa-solid fa-pen-to-square"></i> ' + el.textContent;
                        }
                        else if(text.includes('retour') || text.includes('back to list')) {
                            el.className = 'btn-action btn-back';
                            el.innerHTML = '<i class="fa-solid fa-arrow-left"></i> Retour';
                        }
                        else if(text === 'delete' || text === 'supprimer') {
                            el.className = 'btn-action btn-delete';
                            el.innerHTML = '<i class="fa-solid fa-trash"></i> Supprimer';
                        }
                        else if(text.includes('cr√©er') || text.includes('ajouter') || text.includes('create new')) {
                            el.className = 'btn-create';
                            el.innerHTML = '<i class="fa-solid fa-plus"></i> ' + el.textContent;
                        }
                        else if(text === 'update' || text === 'save' || text === 'enregistrer' || text === 'mettre √† jour') {
                            el.className = 'btn-create';
                            el.innerHTML = '<i class="fa-solid fa-check"></i> ' + el.textContent;
                        }
                    });
                }

                /* 3. FIX SCROLL SIDEBAR */
                const sidebar = document.querySelector('.sidebar');

                if (sidebar) {
                    const savedScroll = localStorage.getItem('sidebar-scroll');
                    if (savedScroll !== null) {
                        sidebar.scrollTop = savedScroll;
                    }

                    sidebar.addEventListener('scroll', function () {
                        localStorage.setItem('sidebar-scroll', sidebar.scrollTop);
                    });
                }

            });
        </script>
    </body>
</html>