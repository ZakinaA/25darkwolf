                        Bienvenue sur E-Music
                    {% endif %}
                </div>

                <div class="auth-buttons">
                    {% if app.user %}
                        <a href="{{ path('app_logout') }}" class="btn btn-logout">Se d√©connecter</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-login">Connexion</a>
                        <a href="{{ path('app_register') is defined ? path('app_register') : '#' }}" class="btn btn-register">Cr√©er un compte</a>
                    {% endif %}
                </div>
            </div>

            {# --- CONTENU --- #}
            <div class="content-container">
                {# Flash Messages #}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label == 'error' ? 'danger' : label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block body %}{% endblock %}
            </div>

        </div>

        {# --- SCRIPT AUTOMATIQUE AM√âLIOR√â --- #}
        <script>
            document.addEventListener("DOMContentLoaded", function() {
                
                // 1. G√©rer les TABLEAUX (pour l'index)
                const tables = document.querySelectorAll('table');
                tables.forEach(table => {
                    if(!table.classList.contains('planning-table')) {
                        table.classList.add('planning-table');
                    }
                });

                // 2. SCANNER TOUS LES LIENS ET BOUTONS DE LA PAGE
                // On cherche dans le conteneur principal
                const container = document.querySelector('.content-container');
                if(container) {
                    // On prend tous les liens <a> et les boutons <button>
                    const allElements = container.querySelectorAll('a, button');

                    allElements.forEach(el => {
                        const text = el.textContent.trim().toLowerCase();
                        
                        // Ignore si d√©j√† stylis√© (ex: classe ajout√©e manuellement)
                        if (el.classList.contains('btn-action') || el.classList.contains('btn-create')) return;

                        // -- BOUTON "VOIR" / "SHOW" -- (VERT)
                        if(text === 'show' || text === 'voir') {
                            el.className = 'btn-action btn-show';
                            el.innerHTML = '<i class="fa-solid fa-eye"></i> Voir';
                        }
                        
                        // -- BOUTON "MODIFIER" / "EDIT" -- (NOIR)
                        else if(text === 'edit' || text === 'modifier') {
                            el.className = 'btn-action btn-edit';
                            el.innerHTML = '<i class="fa-solid fa-pen-to-square"></i> Modifier';
                        }

                        // -- BOUTON "RETOUR" / "BACK TO LIST" -- (GRIS)
                        else if(text.includes('back to list') || text.includes('retour')) {
                            el.className = 'btn-action btn-back';
                            el.innerHTML = '<i class="fa-solid fa-arrow-left"></i> Retour';
                        }

                        // -- BOUTON "SUPPRIMER" / "DELETE" -- (ROUGE)
                        else if(text === 'delete' || text === 'supprimer') {
                            el.className = 'btn-action btn-delete';
                            el.innerHTML = '<i class="fa-solid fa-trash"></i> Supprimer';
                        }

                        // -- BOUTON "CR√âER" / "CREATE NEW" -- (VERT + GROS)
                        else if(text.includes('create new') || text.includes('cr√©er') || text.includes('ajouter')) {
                            el.className = 'btn-create';
                            el.innerHTML = '<i class="fa-solid fa-plus"></i> ' + el.textContent;
                        }
                    });
                }
            });
        </script>
    </body>
</html>