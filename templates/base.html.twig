                <a href="{{ path('app_instrument_index') }}">üé∏ Instruments</a>
                <a href="{{ path('app_contrat_pret_index') }}">üìù Contrats Pr√™t</a>
                <a href="{{ path('app_intervention_index') }}">üîß Interventions</a>

