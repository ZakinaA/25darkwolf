                    {% endif %}
                </div>
            </div>

            {# --- CONTENU --- #}
            <div class="content-container">
                {# Affichage des messages flash (confirmation, erreurs) #}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label == 'error' ? 'danger' : label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block body %}{% endblock %}
            </div>

        </div>

        {# --- SCRIPT AUTOMATIQUE POUR STYLISER LES BOUTONS --- #}
        {# Ce script transforme juste le texte en bouton, SANS ajouter d'animation #}
        <script>
            document.addEventListener("DOMContentLoaded", function() {
                // 1. Transformer les liens de la derni√®re colonne des tableaux (Actions)
                const tables = document.querySelectorAll('table');
                
                tables.forEach(table => {
                    if(!table.classList.contains('planning-table')) {
                        table.classList.add('planning-table');
                    }
                    
                    const rows = table.querySelectorAll('tbody tr');
                    rows.forEach(row => {
                        const lastCell = row.lastElementChild;
                        if(lastCell) {
                            const links = lastCell.querySelectorAll('a');
                            links.forEach(link => {
                                const text = link.textContent.trim().toLowerCase();
                                
                                // Si lien "show" ou "voir"
                                if(text.includes('show') || text.includes('voir')) {
                                    link.className = 'btn-action btn-show';
                                    link.innerHTML = '<i class="fa-solid fa-eye"></i> Voir';
                                }
                                // Si lien "edit" ou "modifier"
                                else if(text.includes('edit') || text.includes('modifier')) {
                                    link.className = 'btn-action btn-edit';
                                    link.innerHTML = '<i class="fa-solid fa-pen-to-square"></i> Modifier';
                                }
                            });
                        }
                    });
                });

                // 2. Transformer le lien "Create new" ou "Cr√©er"
                const contentArea = document.querySelector('.content-container');
                if(contentArea) {
                    const allLinks = contentArea.querySelectorAll('a');
                    allLinks.forEach(link => {
                        const text = link.textContent.trim().toLowerCase();
                        if(!link.classList.contains('btn-action') && (text.includes('create new') || text.includes('cr√©er') || text.includes('ajouter'))) {
                            link.className = 'btn-create';
                            link.innerHTML = '<i class="fa-solid fa-plus"></i> ' + link.textContent;
                        }
                    });
                }
            });
        </script>
    </body>
</html>