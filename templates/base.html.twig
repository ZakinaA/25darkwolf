            {% endif %}
        </div>

        {# --- ZONE DROITE --- #}
        <div class="main-wrapper">
            
            {# --- TOP BAR --- #}
            <div class="top-bar">
                <div class="user-info">
                    {% if app.user %}
                        Bonjour, {{ app.user.email }}
                        {% if is_granted('ROLE_ADMIN') %} 
                            <span style="color: var(--color-primary-accent); font-weight:bold;"> (Admin)</span> 
                        {% elseif is_granted('ROLE_GESTIONNAIRE') %}
