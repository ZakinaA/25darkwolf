{% extends 'base.html.twig' %}

{% block title %}Accessoire index{% endblock %}

{% block body %}
    <h1>Liste des accessoires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for accessoire in accessoires %}
            <tr>
                <td>{{ accessoire.id }}</td>
                <td>{{ accessoire.libelle }}</td>
                <td>
                    <a href="{{ path('app_accessoire_show', {'id': accessoire.id}) }}">show</a>
                    <a href="{{ path('app_accessoire_edit', {'id': accessoire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_accessoire_new') }}">Create new</a>
{% endblock %}
