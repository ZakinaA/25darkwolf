{% extends 'base.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
    <h1>Cours</h1>

    <table class="table">
        <tbody>
          
            <tr>
                <th>Libelle</th>
                <td>{{ cour.libelle }}</td>
            </tr>
            <tr>
                <th>AgeMini</th>
                <td>{{ cour.ageMini }}</td>
            </tr>
            <tr>
                <th>HeureDebut</th>
                <td>{{ cour.heureDebut ? cour.heureDebut|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>HeureFin</th>
                <td>{{ cour.heureFin ? cour.heureFin|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Professeur</th>
                <td>{{ cour.professeur.prenom }} {{ cour.professeur.nom }}
                </td>
            </tr>
            <tr>
                <th>Élèves inscrits</th>
                <td>
                    <ul>
                        {% for inscription in cour.inscription %}
                            <li>{{ inscription.eleve.prenom }} {{ inscription.eleve.nom }}</li>
                        {% else %}
                            <li>Aucun élève inscrit pour ce cours.</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Jour</th>
                <td>{{ cour.jour.libelle }} 
                </td>
            </tr>

            
        </tbody>
    </table>

    <a href="{{ path('app_eleve_mes_cours') }}">back to list</a>

    <a href="{{ path('app_cours_edit', {'id': cour.id}) }}">edit</a>

    {{ include('cours/_delete_form.html.twig') }}
{% endblock %}
