{% extends 'base.html.twig' %}

{% block title %}Détail de l'Intervention #{{ intervention.id }}{% endblock %}

{% block body %}
    <div class="container mx-auto p-6 max-w-3xl bg-white shadow-xl rounded-lg">
        <h1 class="text-3xl font-bold mb-6 text-gray-800 border-b pb-2">Détail de l'Intervention #{{ intervention.id }}</h1>

        <table class="w-full text-left border-collapse">
            <tbody>
                <tr class="border-b hover:bg-gray-50">
                    <th class="py-3 px-4 font-semibold text-gray-600 w-1/4">Id</th>
                    <td class="py-3 px-4 text-gray-800">{{ intervention.id }}</td>
                </tr>
                <tr class="border-b hover:bg-gray-50">
                    <th class="py-3 px-4 font-semibold text-gray-600">Date Début</th>
                    <td class="py-3 px-4 text-gray-800">{{ intervention.dateDebut ? intervention.dateDebut|date('Y-m-d H:i:s') : 'N/A' }}</td>
                </tr>
                <tr class="border-b hover:bg-gray-50">
                    <th class="py-3 px-4 font-semibold text-gray-600">Date Fin</th>
                    <td class="py-3 px-4 text-gray-800">{{ intervention.dateFin ? intervention.dateFin|date('Y-m-d H:i:s') : 'N/A' }}</td>
                </tr>
                <tr class="border-b hover:bg-gray-50">
                    <th class="py-3 px-4 font-semibold text-gray-600">Prix (€)</th>
                    <td class="py-3 px-4 text-gray-800 font-bold">{{ intervention.prix|number_format(2, ',', ' ') }}</td>
                </tr>
                <tr class="border-b hover:bg-gray-50">
                    <th class="py-3 px-4 font-semibold text-gray-600">Quotité</th>
                    <td class="py-3 px-4 text-gray-800">{{ intervention.quotite }}</td>
                </tr>
                <tr class="border-b hover:bg-gray-50">
                    <th class="py-3 px-4 font-semibold text-gray-600 align-top">Descriptif</th>
                    <td class="py-3 px-4 text-gray-800 italic">{{ intervention.descriptif|nl2br }}</td>
                </tr>
            </tbody>
        </table>
        
        {# NOUVEAU BLOC : INSTRUMENT CONCERNÉ #}
        {% if intervention.instrument %}
            <h2 class="text-2xl font-semibold text-indigo-700 mt-8 mb-4 border-b pb-1">Instrument concerné</h2>
            {% set instrument = intervention.instrument %}
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 p-4 bg-indigo-50 rounded-lg">
                <div>
                    <dt class="font-medium text-gray-600">N° de Série :</dt>
                    <dd class="font-mono text-lg text-indigo-900">{{ instrument.numSerie }}</dd>
                </div>
                <div>
                    <dt class="font-medium text-gray-600">Type :</dt>
                    <dd class="text-lg text-indigo-900">
                        {{ instrument.typeInstrument ? instrument.typeInstrument.libelle : 'Non spécifié' }}
                    </dd>
                </div>
                <div>
                    <dt class="font-medium text-gray-600">Marque :</dt>
                    <dd class="text-lg text-indigo-900">
                        {# L'accès à 'marque' fonctionne maintenant grâce à l'entité Instrument mise à jour #}
                        {{ instrument.marque ? instrument.marque.libelle : 'Non spécifiée' }}
                    </dd>
                </div>
            </div>
        {% else %}
            <p class="mt-6 p-3 bg-yellow-100 text-yellow-800 rounded-lg">⚠ Aucun instrument lié à cette intervention.</p>
        {% endif %}

        <div class="mt-8 flex space-x-4">
            <a href="{{ path('app_intervention_index') }}" class="bg-gray-500 text-white font-bold py-2 px-4 rounded-lg hover:bg-gray-600 transition duration-150">
                Retour à la liste
            </a>
            <a href="{{ path('app_intervention_edit', {'id': intervention.id}) }}" class="bg-blue-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-150">
                Modifier
            </a>
            
            {# Inclure le formulaire de suppression pour l'action POST #}
            {{ include('intervention/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
