{% extends 'base.html.twig' %}

{% block title %}Liste des Contrats de Prêt{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold mb-6">Liste des Contrats de Prêt</h1>

    <table class="table min-w-full bg-white shadow-md rounded-lg overflow-hidden">
        <thead>
            <tr class="bg-gray-100 border-b">
                <th class="py-3 px-4 text-left">Id</th>
                <th class="py-3 px-4 text-left">Élève Emprunteur</th>
                <th class="py-3 px-4 text-left">Instrument (Nom)</th>
                <th class="py-3 px-4 text-left">Type d'Instrument</th>
                <th class="py-3 px-4 text-left">Date Début</th>
                <th class="py-3 px-4 text-left">Date Fin</th>
                <th class="py-3 px-4 text-left">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contratPret in contratsPret %}
            <tr class="hover:bg-gray-50 border-b">
                <td class="py-3 px-4">{{ contratPret.id }}</td>
                
                {# MODIF : Affichage de l'élève #}
                <td class="py-3 px-4">
                    {{ contratPret.eleve.prenom }} {{ contratPret.eleve.nom }}
                </td>

                {# MODIF : Affichage du Nom de l'Instrument #}
                <td class="py-3 px-4">
                    {{ contratPret.instrument.numSerie }} 
                    {# J'utilise numSerie car c'est un identifiant souvent unique, à ajuster si vous avez un champ 'nom' dans Instrument #}
                </td>
                
                {# MODIF : Affichage du Type d'Instrument #}
                <td class="py-3 px-4">
                    {{ contratPret.instrument.typeInstrument.libelle }}
                </td>
                
                <td class="py-3 px-4">{{ contratPret.dateDebut ? contratPret.dateDebut|date('Y-m-d') : '' }}</td>
                <td class="py-3 px-4">{{ contratPret.dateFin ? contratPret.dateFin|date('Y-m-d') : '' }}</td>
                
                <td class="py-3 px-4">
                    <a href="{{ path('app_contrat_pret_show', {'id': contratPret.id}) }}" class="text-blue-600 hover:text-blue-800 mr-2">Voir</a>
                    <a href="{{ path('app_contrat_pret_edit', {'id': contratPret.id}) }}" class="text-yellow-600 hover:text-yellow-800">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="py-3 px-4 text-center text-gray-500">Aucun contrat de prêt trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="mt-6">
        <a href="{{ path('app_contrat_pret_new') }}" class="bg-indigo-600 text-white py-2 px-4 rounded-lg hover:bg-indigo-700 transition duration-150">Créer un nouveau contrat de prêt</a>
    </div>
{% endblock %}