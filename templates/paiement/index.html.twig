{% extends 'base.html.twig' %}

{% block title %}Paiement index{% endblock %}

{% block body %}
<h1 class="text-3xl font-bold mb-6 text-gray-800">Liste des paiements</h1>

<div class="overflow-x-auto bg-white rounded-lg shadow">
    {# Utilisation des classes Tailwind CSS pour un meilleur style #}
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Id
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Élève
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Montant
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Date de Paiement
                </th>
                <th scope="col" class="relative px-6 py-3">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
        {% for paiement in paiements %}
            <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    {{ paiement.id }}
                </td>
                {# CORRECTION: Accès à l'élève via l'entité Inscription (Paiement -> Inscription -> Eleve) #}
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                    {% set eleve = paiement.inscription ? paiement.inscription.eleve : null %}
                    {{ eleve ? eleve.prenom ~ ' ' ~ eleve.nom : 'N/A' }}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                    {{ paiement.montant|number_format(2, ',', ' ') }} €
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                    {{ paiement.datePaiement ? paiement.datePaiement|date('d/m/Y') : '' }}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                    <a href="{{ path('app_paiement_show', {'id': paiement.id}) }}" class="text-indigo-600 hover:text-indigo-900">Voir</a>
                    <a href="{{ path('app_paiement_edit', {'id': paiement.id}) }}" class="text-green-600 hover:text-green-900">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">
                    Aucun paiement trouvé.
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<div class="mt-6">
    <a href="{{ path('app_paiement_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        Créer un nouveau paiement
    </a>
</div>


{% endblock %}