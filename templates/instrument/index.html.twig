{% block body %}
<style>
    /* ------------------- PALETTE (Reprise des styles cohérents) ------------------- */
    :root {
        --primary: #37A297;
        --light: #F2FAF8;
        --gray: #212529;
        --white: #ffffff;
        --dark-gray: #495057;
    }

    body {
        background-color: var(--light);
        font-family: 'Poppins', sans-serif;
        color: var(--gray);
        padding: 2rem;
    }

    /* ------------------- Conteneur Principal / Titre ------------------- */
    .list-container {
        max-width: 1200px;
        width: 100%;
        margin: 0 auto;
        background: var(--white);
        border-radius: 1rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        padding: 2rem;
    }

    .list-container h1 {
        color: var(--primary);
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1rem;
        border-bottom: 2px solid var(--primary);
        padding-bottom: 0.5rem;
    }
    
    /* ------------------- Boutons d'Action ------------------- */
    .action-bar {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 1.5rem;
    }

    .btn-action {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        padding: 0.6rem 1.25rem;
        border-radius: 0.5rem;
        text-decoration: none;
        transition: transform 0.1s, box-shadow 0.1s;
        border: none;
        cursor: pointer;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .btn-action:hover {
        transform: translateY(-1px);
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
    }
    .btn-primary { background-color: var(--primary); color: var(--white); }
    .btn-primary:hover { background-color: #2e8b7d; }

    .btn-secondary { background-color: #6c757d; color: var(--white); }
    .btn-secondary:hover { background-color: #5a6268; }

    /* ------------------- TABLEAU ------------------- */
    .instrument-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

    .instrument-table thead th {
        background-color: var(--primary);
        color: var(--white);
        text-align: left;
        padding: 1rem;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        border-bottom: 2px solid var(--primary);
    }

    .instrument-table tbody tr {
        border-bottom: 1px solid #eee;
        transition: background-color 0.15s;
    }
    .instrument-table tbody tr:hover {
        background-color: var(--light);
    }
    .instrument-table tbody tr:last-child {
        border-bottom: none;
    }

    .instrument-table td {
        padding: 1rem;
        vertical-align: middle;
        font-size: 0.95rem;
        color: var(--dark-gray);
    }

    /* Style des coins arrondis pour le tableau */
    .instrument-table thead tr th:first-child { border-top-left-radius: 0.5rem; }
    .instrument-table thead tr th:last-child { border-top-right-radius: 0.5rem; }

    /* Style des boutons dans le tableau */
    .table-actions a {
        padding: 0.4rem 0.8rem;
        margin-right: 0.5rem;
        border-radius: 0.3rem;
        font-size: 0.85rem;
        text-decoration: none;
    }
    .btn-detail { background-color: #3498db; color: var(--white); }
    .btn-detail:hover { background-color: #2980b9; }

    /* ------------------- AFFICHAGE RESPONSIVE (Mobile) ------------------- */
    @media screen and (max-width: 900px) {
        .list-container {
            padding: 1rem;
            box-shadow: none;
            border-radius: 0;
        }
        
        .instrument-table, .instrument-table thead, .instrument-table tbody, .instrument-table th, .instrument-table td, .instrument-table tr {
            display: block;
        }

        /* Masquer l'entête du tableau (car les labels sont dans les 'cartes') */
        .instrument-table thead tr {
            position: absolute;
            top: -9999px;
            left: -9999px;
        }

        /* Style des "cartes" individuelles */
        .instrument-table tr {
            border: 1px solid #ddd;
            margin-bottom: 1rem;
            border-radius: 0.5rem;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }
        
        .instrument-table td {
            border: none;
            position: relative;
            padding-left: 50%;
            text-align: right;
            border-bottom: 1px dashed #eee;
        }

        /* Ajouter les labels (entêtes) aux cellules */
        .instrument-table td::before {
            content: attr(data-label);
            position: absolute;
            left: 10px;
            width: 45%;
            padding-right: 10px;
            white-space: nowrap;
            text-align: left;
            font-weight: 600;
            color: var(--primary);
        }
        
        .table-actions {
            text-align: left;
            border-bottom: none !important;
        }
    }

</style>

<div class="list-container">
    <h1>Liste des Instruments</h1>

    <div class="action-bar">
        <a href="{{ path('app_instrument_new') }}" class="btn-action btn-primary">Créer un nouvel instrument</a>
    </div>

    {% if instruments is empty %}
        <p>Aucun instrument trouvé. Ajoutez-en un nouveau !</p>
    {% else %}
        <table class="instrument-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Numéro de Série</th>
                    <th>Date d'Achat</th>
                    <th>Prix d'Achat</th>
                    <th>Type</th>
                    <th>Marque</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for instrument in instruments %}
                <tr>
                    <td data-label="Id">{{ instrument.id }}</td>
                    <td data-label="Numéro de Série">{{ instrument.numSerie }}</td>
                    <td data-label="Date d'Achat">{{ instrument.dateAchat ? instrument.dateAchat|date('d/m/Y') : '' }}</td>
                    <td data-label="Prix d'Achat">{{ instrument.prixAchat ? (instrument.prixAchat|number_format(2, ',', ' ') ~ ' €') : '' }}</td>
                    <td data-label="Type">{{ instrument.typeInstrument.libelle ?? 'N/A' }}</td>
                    <td data-label="Marque">{{ instrument.marque.libelle ?? 'N/A' }}</td>
                    <td data-label="Actions" class="table-actions">
                        <a href="{{ path('app_instrument_show', {'id': instrument.id}) }}" class="btn-action btn-detail">Voir</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

</div>
{% endblock %}
