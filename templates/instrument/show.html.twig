

{% block body %}
<style>
    /* ------------------- PALETTE (Reprise des styles cohérents) ------------------- */
    :root {
        --primary: #37A297;
        --light: #F2FAF8;
        --gray: #212529;
        --white: #ffffff;
        --dark-gray: #495057;
        --danger: #dc2626; 
    }

    /* ------------------- Global Styling ------------------- */
    body {
        background-color: var(--light);
        font-family: 'Poppins', sans-serif;
        color: var(--gray);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        padding: 2rem;
    }

    /* ------------------- Card / Conteneur des Détails ------------------- */
    .show-container {
        max-width: 800px;
        width: 100%;
        background: var(--white);
        border-radius: 1rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        padding: 2.5rem;
        margin-top: 2rem;
    }

    .show-container h1 {
        color: var(--primary);
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        border-bottom: 2px solid var(--primary);
        padding-bottom: 0.5rem;
    }

    /* ------------------- Grille d'Informations (Deux Colonnes) ------------------- */
    .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr; /* Deux colonnes égales */
        gap: 1.5rem 2rem;
        margin-bottom: 2rem;
        padding: 1rem;
        border: 1px solid #eee;
        border-radius: 0.75rem;
        background-color: #fafafa;
    }

    .info-item {
        padding: 0.5rem 0;
    }
    
    .info-label {
        display: block;
        font-weight: 600;
        color: var(--dark-gray);
        font-size: 0.9rem;
        margin-bottom: 0.2rem;
        text-transform: uppercase;
    }
    
    .info-value {
        font-size: 1.1rem;
        color: var(--gray);
        font-weight: 500;
    }
    
    .info-value.list-chips {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        font-size: 1rem;
        font-weight: 400;
    }
    
    .chip {
        background-color: var(--primary);
        color: var(--white);
        padding: 0.3rem 0.7rem;
        border-radius: 9999px; /* Pill shape */
        font-size: 0.85rem;
    }

    /* ------------------- Boutons d'Action ------------------- */
    .actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        border-top: 1px solid #eee;
        padding-top: 1.5rem;
    }
    
    .btn-action {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        padding: 0.6rem 1.25rem;
        border-radius: 0.5rem;
        text-decoration: none;
        transition: transform 0.1s, box-shadow 0.1s;
        border: none;
        cursor: pointer;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .btn-action:hover {
        transform: translateY(-1px);
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
    }
    
    .btn-back { background-color: #6c757d; color: var(--white); }
    .btn-back:hover { background-color: #5a6268; }

    .btn-edit { background-color: #f59e0b; color: var(--white); }
    .btn-edit:hover { background-color: #d97706; }

    .delete-form-inline { display: inline-block; }
    .btn-delete { background-color: var(--danger); color: var(--white); } 
    .btn-delete:hover { background-color: #b91c1c; }

    /* ------------------- RESPONSIVE ------------------- */
    @media (max-width: 600px) {
        .info-grid {
            grid-template-columns: 1fr; /* Une seule colonne sur mobile */
            gap: 1rem;
        }
        .show-container {
            padding: 1.5rem;
        }
        .actions {
            flex-direction: column;
            gap: 0.75rem;
        }
        .btn-action {
            width: 100%;
        }
    }
</style>

<div class="show-container">
    <h1>Détails de l'Instrument #{{ instrument.id }}</h1>

    <div class="info-grid">

        {# Colonne 1 : Généralités #}
        <div class="info-item">
            <span class="info-label">Numéro de Série</span>
            <span class="info-value">{{ instrument.numSerie }}</span>
        </div>
        <div class="info-item">
            <span class="info-label">Type</span>
            <span class="info-value">{{ instrument.typeInstrument.libelle ?? 'N/A' }}</span>
        </div>

        {# Colonne 2 : Achat #}
        <div class="info-item">
            <span class="info-label">Date d'Achat</span>
            <span class="info-value">{{ instrument.dateAchat ? instrument.dateAchat|date('d/m/Y') : 'N/A' }}</span>
        </div>
        <div class="info-item">
            <span class="info-label">Prix d'Achat</span>
            <span class="info-value">{{ instrument.prixAchat ? (instrument.prixAchat|number_format(2, ',', ' ') ~ ' €') : 'N/A' }}</span>
        </div>
        
        {# Ligne complète pour la Marque #}
        <div class="info-item" style="grid-column: 1 / 3;">
            <span class="info-label">Marque</span>
            <span class="info-value">{{ instrument.marque.libelle ?? 'N/A' }}</span>
        </div>

        {# Ligne complète pour les Couleurs (Utilisation des Chips) #}
        <div class="info-item" style="grid-column: 1 / 3;">
            <span class="info-label">Couleurs</span>
            <div class="info-value list-chips">
                {% if instrument.couleurs is not empty %}
                    {% for couleur in instrument.couleurs %}
                        <span class="chip">{{ couleur.nom }}</span>
                    {% endfor %}
                {% else %}
                    <span class="info-value">Aucune couleur associée</span>
                {% endif %}
            </div>
        </div>

        {# Vous pourriez ajouter ici d'autres informations comme l'état (disponible/prêté) ou les accessoires #}

    </div>

    <div class="actions">
        {# Bouton Retour #}
        <a href="{{ path('app_instrument_index') }}" class="btn-action btn-back">
            Retour à la liste
        </a>

        {# Bouton Modifier #}
        <a href="{{ path('app_instrument_edit', {'id': instrument.id}) }}" class="btn-action btn-edit">
            Modifier
        </a>

        {# Bouton Supprimer (Formulaire inclus) #}
        {{ include('instrument/_delete_form.html.twig') }}
    </div>

</div>
{% endblock %}