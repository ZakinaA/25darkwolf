

{% block body %}

<div class="show-container">
    <h1>Détails de l'Instrument #{{ instruments.id }}</h1>

    <div class="info-grid">

        {# Colonne 1 : Généralités #}
        <div class="info-item">
            <span class="info-label">Numéro de Série</span>
            <span class="info-value">{{ instruments.numSerie }}</span>
        </div>
        <div class="info-item">
            <span class="info-label">Type</span>
            <span class="info-value">{{ instruments.typeInstrument.libelle ?? 'N/A' }}</span>
        </div>

        {# Colonne 2 : Achat #}
        <div class="info-item">
            <span class="info-label">Date d'Achat</span>
            <span class="info-value">{{ instruments.dateAchat ? instruments.dateAchat|date('d/m/Y') : 'N/A' }}</span>
        </div>
        <div class="info-item">
            <span class="info-label">Prix d'Achat</span>
            <span class="info-value">{{ instruments.prixAchat ? (instruments.prixAchat|number_format(2, ',', ' ') ~ ' €') : 'N/A' }}</span>
        </div>
        
        {# Ligne complète pour la Marque #}
        <div class="info-item" style="grid-column: 1 / 3;">
            <span class="info-label">Marque</span>
            <span class="info-value">{{ instruments.marque.libelle ?? 'N/A' }}</span>
        </div>

        {# Ligne complète pour les Couleurs (Utilisation des Chips) #}
        <div class="info-item" style="grid-column: 1 / 3;">
            <span class="info-label">Couleurs</span>
            <div class="info-value list-chips">
                {% if instruments.couleurs is not empty %}
                    {% for couleur in instruments.couleurs %}
                        <span class="chip">{{ couleur.nom }}</span>
                    {% endfor %}
                {% else %}
                    <span class="info-value">Aucune couleur associée</span>
                {% endif %}
            </div>
        </div>

        {# Vous pourriez ajouter ici d'autres informations comme l'état (disponible/prêté) ou les accessoires #}

    </div>

    <div class="actions">
        {# Bouton Retour #}
        <a href="{{ path('app_instrument_index') }}" class="btn-action btn-back">
            Retour à la liste
        </a>

        {# Bouton Modifier #}
        <a href="{{ path('app_instrument_edit', {'id': instruments.id}) }}" class="btn-action btn-edit">
            Modifier
        </a>

        {# Bouton Supprimer (Formulaire inclus) #}
        {{ include('instrument/_delete_form.html.twig') }}
    </div>

</div>
{% endblock %}