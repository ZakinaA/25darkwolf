{% extends 'base.html.twig' %}

{% block title %}Classe : {{ classe_instrument.libelle }}{% endblock %}

{% block body %}

<div class="show-container">
    <h1><i class="fa-solid fa-layer-group"></i> Classe d'instrument : {{ classe_instrument.libelle }}</h1>

    <div class="info-grid">

        {# Bloc ID #}
        <div class="info-item">
            <span class="info-label"><i class="fa-solid fa-hashtag"></i> Id</span>
            <span class="info-value">{{ classe_instrument.id }}</span>
        </div>

        {# Bloc Libellé #}
        <div class="info-item">
            <span class="info-label"><i class="fa-solid fa-tag"></i> Libellé</span>
            <span class="info-value">{{ classe_instrument.libelle }}</span>
        </div>

        {# Bloc Liste des Types (Prend toute la largeur) #}
        <div class="info-item" style="grid-column: 1 / -1;">
            <span class="info-label"><i class="fa-solid fa-music"></i> Types d'instruments dans cette classe</span>
            
            <div class="info-value list-chips">
                {% if classe_instrument.typeInstruments is not empty %}
                    {% for type in classe_instrument.typeInstruments %}
                        <span class="chip">{{ type.libelle }}</span>
                    {% endfor %}
                {% else %}
                    <span style="color: #999; font-style: italic;">Aucun type d'instrument associé</span>
                {% endif %}
            </div>
        </div>

    </div>

    <div class="actions">
        {# Bouton Retour #}
        <a href="{{ path('app_classe_instrument_index') }}" class="btn-action btn-back">
            <i class="fa-solid fa-arrow-left"></i> Retour à la liste
        </a>

        {# Bouton Modifier #}
        <a href="{{ path('app_classe_instrument_edit', {'id': classe_instrument.id}) }}" class="btn-action btn-edit">
            <i class="fa-solid fa-pen-to-square"></i> Modifier
        </a>

        {# Bouton Supprimer #}
        {{ include('classe_instrument/_delete_form.html.twig') }}
    </div>

</div>
{% endblock %}